<h3>Facebook Feed</h3>
<div class="no-global-styles" data-bind="foreach: post">
    <div class="row">
        <div class="panel panel-info">
            <div class="panel-heading">
                <a data-bind="attr: { href: link }" target="_blank">
                    <h3 class="panel-title" data-bind="text: title"></h3>
                </a>
            </div>
            <div class="panel-body">
                <div class="col-md-4">
                    <img style="height: 200px; width: 200px;" class="img-responsive hcenter"
                         data-bind="if: imageSrc, attr: { src: imageSrc }">
                </div>
                <div class="col-md-8">
                    <p data-bind="text: description"></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/facebookApi.js" asp-append-version="true"></script>